<Window x:Class="TraficViolation.NewReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TraficViolation"
        mc:Ignorable="d"
        Title="New Report Window" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Violation Type" Margin="5"></Label>
        <ComboBox Grid.Row="0" Grid.Column="1" Name="cbViolationType" Margin="5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Plate Number" Margin="5"></Label>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtPlateNumber" Margin="5"></TextBox>

        <Label Grid.Row="2" Grid.Column="0" Content="Violation Date" Margin="5"></Label>
        <DatePicker Grid.Row="2" Grid.Column="1" Name="dpViolationDate" Margin="5"></DatePicker>

        <Label Grid.Row="3" Grid.Column="0" Content="Location" Margin="5"></Label>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtLocation" Margin="5"></TextBox>

        <Label Grid.Row="4" Grid.Column="0" Content="Image URL" Margin="5"></Label>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtImageUrl" Margin="5"></TextBox>

        <Label Grid.Row="5" Grid.Column="0" Content="Description" Margin="5"></Label>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtDescription" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="5"></TextBox>

        <Button Grid.Row="6" Grid.Column="1" Name="btnSubmit" Content="Submit Report" Width="120" HorizontalAlignment="Right" Margin="5" Click="btnSubmit_Click"></Button>
    </Grid>
</Window>